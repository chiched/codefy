{

    "manifest_version": 2,
    "name": "Codefy",
    "version": "1.0",
  
    "description": "Changes the page to look like code",
  
    "icons": {
      "48": "icons/border-48.png"
    },
    "browser_action": {
      "default_icon": {
        "36": "icons/c-36.png"
      },
      "default_title": "Codefy the page"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "run_at": "document_start",
        "js": ["start.js"],
        "css": ["beforeLoad.css"]
      },
      {
        "matches": ["<all_urls>"],
        "run_at": "document_end",
        "js": ["end.js"]
      }
      
    ],

    "web_accessible_resources": [
      "style.css",
      "icons/favicon.ico"
    ]
  
  }

